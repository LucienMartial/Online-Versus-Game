{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    // colyseus template
    "declaration": true,
    "removeComments": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowJs": true,
    "strictNullChecks": false
  },
  "exclude": ["app-client/*", "node-modules", "dist", "test"]
}
